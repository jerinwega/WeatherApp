{
  "name": "weatherapp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "DARK_MODE=media expo start --android",
    "ios": "DARK_MODE=media expo start --ios",
    "web": "DARK_MODE=media expo start --web",
    "test": "jest --watchAll"
  },
  "dependencies": {
    "@expo/html-elements": "^0.4.2",
    "@gluestack-ui/actionsheet": "^0.2.53",
    "@gluestack-ui/alert": "^0.1.16",
    "@gluestack-ui/button": "^1.0.14",
    "@gluestack-ui/icon": "^0.1.27",
    "@gluestack-ui/input": "^0.1.38",
    "@gluestack-ui/nativewind-utils": "^1.0.26",
    "@gluestack-ui/overlay": "^0.1.22",
    "@gluestack-ui/select": "^0.1.31",
    "@gluestack-ui/toast": "^1.0.9",
    "@legendapp/motion": "^2.4.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-navigation/native": "^7.1.9",
    "@react-navigation/native-stack": "^7.3.13",
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.9.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "expo": "~53.0.9",
    "expo-image": "~2.1.7",
    "expo-linear-gradient": "~14.1.4",
    "expo-status-bar": "~2.2.3",
    "expo-system-ui": "~5.0.7",
    "jest-expo": "~53.0.5",
    "lodash": "^4.17.21",
    "lucide-react-native": "^0.511.0",
    "nativewind": "^4.1.23",
    "react": "19.0.0",
    "react-dom": "^19.1.0",
    "react-native": "0.79.2",
    "react-native-css-interop": "^0.1.22",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-progress": "^5.0.1",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0",
    "react-native-svg": "^15.2.0",
    "react-redux": "^9.2.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^3.1.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/react": "~19.0.10",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jscodeshift": "^0.15.2"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?@?react-native",
      "|@react-navigation",
      "|expo(nent)?|@expo(nent)?/.*",
      "|@unimodules/.*|unimodules",
      "|@gluestack-ui/.*",
      "|react-redux",
      ")"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "identity-obj-proxy",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "./jest.setup.js",
      "@testing-library/jest-native/extend-expect"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/*.d.ts",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.config.js",
      "!**/metro.config.js",
      "!**/tailwind.config.js",
      "!**/expo-env.d.ts",
      "!**/.expo/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
